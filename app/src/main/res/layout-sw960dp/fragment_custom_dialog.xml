<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="122dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/bg_dialog">

    <TextView
        android:id="@+id/tvResultDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/comicsansregular"
        android:gravity="center"
        android:text="@string/hasil_permainan"
        android:textColor="@color/black"
        android:textSize="39sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47sp"
        android:fontFamily="@font/comicsansbold"
        android:textColor="@color/black"
        android:textSize="49sp"
        android:text="Ervin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResultDialog" />

    <TextView
        android:id="@+id/tvTheWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-28dp"
        android:fontFamily="@font/comicsansbold"
        android:textColor="@color/black"
        android:textSize="49sp"
        android:text="MENANG!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameDialog" />

    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="425dp"
        android:layout_height="85dp"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/bg_button_dialog"
        android:backgroundTint="@color/button_dialod_1"
        android:elegantTextHeight="true"
        android:hint="Main Lagi"
        android:textColorHint="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTheWinner" />

    <Button
        android:id="@+id/btnBackToMenu"
        android:layout_width="425dp"
        android:layout_height="85dp"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/bg_button_dialog"
        android:backgroundTint="@color/button_dialod_2"
        android:elegantTextHeight="true"
        android:hint="Kembali Ke Menu"
        android:textColorHint="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayAgain" />

</androidx.constraintlayout.widget.ConstraintLayout>
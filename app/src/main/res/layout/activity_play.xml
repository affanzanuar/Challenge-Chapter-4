<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".PlayActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_arrow_back" />

    <ImageView
        android:id="@+id/iv_rps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:maxWidth="350dp"
        android:maxHeight="350dp"
        android:scaleType="fitStart"
        android:src="@drawable/rock_paper_scissor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_rps">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="32dp"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/player_name"
                android:fontFamily="@font/poppinsbold"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/batu_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/batu"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"/>

            <ImageView
                android:id="@+id/kertas_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kertas"
                android:layout_marginTop="32dp"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"/>

            <ImageView
                android:id="@+id/gunting_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gunting"
                android:layout_marginTop="32dp"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_versus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/versus"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="32dp"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tv_player_komputer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:hint="@string/bot_name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/batu_opponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                android:scaleType="fitStart"
                android:src="@drawable/batu" />

            <ImageView
                android:id="@+id/kertas_opponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:adjustViewBounds="true"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                android:scaleType="fitStart"
                android:src="@drawable/kertas" />

            <ImageView
                android:id="@+id/gunting_opponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:adjustViewBounds="true"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                android:scaleType="fitStart"
                android:src="@drawable/gunting" />

        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/white"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_autorenew_24" />

</RelativeLayout>